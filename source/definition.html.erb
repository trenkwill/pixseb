<%= partial "partials/javascripts" %>

<script>

  $('.datepicker').datepicker();

  $( '.js-float-label-wrapper' ).FloatLabel();

  $('.js-remove-member').click(function(e){
      e.preventDefault();
      $(this).parent().parent().fadeOut();
  });

  $('.js-remove-file').click(function(e){
      e.preventDefault();
      $(this).parent().parent().parent().parent().fadeOut();
  });

  $(".js-add-member").click(function(e){
    e.preventDefault();
    var newMember = $(
      "<div class='row mb'>" +
            "<div class='col-sm-4'><p class='color-grey-light font-14 mb0'>Member's picture</p><input type='file' class='form-control-2' /></div>" +
              "<div class='col-sm-8'><input type='text' class='form-control' placeholder='Name' /></div>" +
          "</div>");
    $(this).before(newMember);
  });

  $(".js-add-file").click(function(e){
    e.preventDefault();
    var newMember = $(
      "<div class='row mb'>" +
            "<div class='col-sm-12'><p class='color-grey-light font-14 mb0'>Member's picture</p><input type='file' class='form-control-2' /></div>" +
          "</div>");
    $(this).before(newMember);
  });
</script>


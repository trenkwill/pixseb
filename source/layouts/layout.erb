<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <%= stylesheet_link_tag :site %>
    <%= javascript_include_tag :all %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.5.3/css/bootstrap-slider.min.css">
  </head>

  <body class="<%= page_classes %> bg-grey-light">

      <nav class="navbar navbar-default bg-faded mb0">
          <a class="navbar-brand" href="#">Pixseb</a>
          <ul class="nav navbar-nav pull-right">
            <li class="nav-item">
              <a class="nav-link" href="#"><i class="fa fa-info"></i>Help</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">EN</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"><i class="fa fa-bell"></i></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                  
                <%= image_tag "http://placehold.it/50x50", class:"img-circle pull-left mr-" %>
              
                <div class="pull-left">INSA Strasbourg <br>Denis C.</div>
              </a>
            </li>
          </ul>
          
      </nav>

    <%= yield %>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/9.5.3/bootstrap-slider.min.js"></script>
    
    <%= javascript_include_tag "Chart.bundle.min.js" %>

    <script>
      $('.slider').slider({
        formatter: function(value) {
          return 'Current value: ' + value;
        }
      });
      var ctx = document.getElementById("myChart");
      var myChart = new Chart(ctx, {
          type: 'pie',
          data: {
              labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
              datasets: [{
                  label: '# of Votes',
                  data: [12, 19, 3, 5, 2, 3],
                  backgroundColor: [
                      'rgba(255, 99, 132, 1)',
                      'rgba(54, 162, 235, 1)',
                      'rgba(255, 206, 86, 1)',
                      'rgba(75, 192, 192, 1)',
                      'rgba(153, 102, 255, 1)',
                      'rgba(255, 159, 64, 1)'
                  ],
                  borderColor: [
                      'rgba(255,99,132,1)',
                      'rgba(54, 162, 235, 1)',
                      'rgba(255, 206, 86, 1)',
                      'rgba(75, 192, 192, 1)',
                      'rgba(153, 102, 255, 1)',
                      'rgba(255, 159, 64, 1)'
                  ]
              }]
          },
          options: {
              scales: {
                 disaply: false
              },
              legend: {
                display: false
              }

          }
      });
    </script>


  </body>
</html>
